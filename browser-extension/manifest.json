{
    "manifest_version": 2,
    "name": "Bookmarks-Sync",
    "author": "K!2023",
    "version": "1.0",

    "icons": {
      "48": "icons/BookmarkIcon-48.png"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "{1f06f7ef-c531-4cb3-9d9f-3a8f688daf3e}",
        "strict_min_version": "100.0"
      }
    },

    "permissions": ["bookmarks", "storage"],

    "options_ui": {
        "page": "settings/settings.html"
    },

    "browser_action": {
        "default_title": "Bookmarks-Sync",
        "default_popup": "popup/popup.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false,
        "type": "module"
    }
}
